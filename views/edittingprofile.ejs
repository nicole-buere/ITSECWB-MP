<link rel="stylesheet" href="css/editprofile.css">

<div class="notSidebar">

    <div class="greeting-profile">
        <h2> Edit User Profile </h2>
    </div>

    <div class="info">
        <h3> Name: <%= user.name %> </h3>
        <h3>Edit Description: </h3>

        <input type="text" id="descriptionInput" name="description" value=" <%= user.description %>">
        
        
        <h3>Current Reservations:</h3>
            
        <!-- List view box for current reservations -->

        <div class="current-reservations">
            <table>
                <thead>
                    <tr>
                        <th>Lab</th>
                        <th>Seat</th>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Reservation Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const reservationId in user.reservations) { %>
                        <% const reservation = user.reservations[reservationId]; %>
                        <tr>
                            <td><%= reservation.lab %></td>
                            <td><%= reservation.seat %></td>
                            <td><%= reservation.date %></td>
                            <td><%= reservation.time %> <%= reservation.AMPM %></td>
                            <!-- Calculate End Time based on Start Time and Duration -->
                            <td><%= reservation.end_time %> <%= reservation.end_AMPM %></td>
                            <td><%= reservation.res_name %></td>
                        </tr>
                    <% } %>
                   
                </tbody>
            </table>
        </div>    

    </div>

    

    <div class="image-container-profile">
        <img src="assets/jeongwoo.jpg" alt="userpfp" id="userpfp"> <br> <br>
    </div>

    <div class="profile-buttons">
        <button class="profile-button">Upload New Profile Picture</button>
        <button onclick="navigateTo('/profile')" class="profile-button">Save Changes</button>
        <button onclick="navigateTo('/profile')" class="profile-button">Cancel</button>
    </div>

       
 </div>


<%- include('footer') -%>


<script>
    function navigateTo(url) {
        window.location.href = url;
    }
</script>