<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{{title}}</title>

  <link rel="stylesheet" href="/css/colors.css">

  <style>
    @import url('https://fonts.googleapis.com/css?family=Lexend Deca');
    @import url('https://fonts.googleapis.com/css?family=Inter');

    body {
      display: flex;
      justify-content: center;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(to left, var(--one), var(--two), var(--three));
      font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    }

    .container {
      background-color: var(--two);
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 700px;
      min-height: 520px;
      margin: 90px auto 0;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
      border-radius: 10px;
      padding: 24px 0;
    }

    .title {
      font-family: 'Lexend Deca', sans-serif;
      color: var(--three);
      font-size: 22px;
      margin: 0 0 10px 0;
      letter-spacing: .5px;
      text-align: center;
    }

    .subtitle {
      color: var(--three);
      opacity: .9;
      font-size: 14px;
      margin: 0 0 16px 0;
      text-align: center;
      max-width: 460px;
      line-height: 1.4;
    }

    .form {
      width: 400px;
      color: var(--three);
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    label { font-size: 14px; margin-top: 6px; }

    input[type="password"], textarea, .kba-box {
      width: 100%;
      padding: 10px 12px;
      box-sizing: border-box;
      border-radius: 6px;
      border: 2px solid var(--one);
      background: var(--three);
      color: #111;
      font-size: 14px;
      outline: none;
    }
    input[type="password"]:focus, textarea:focus {
      background: #cfc6e8;
    }
    textarea { resize: vertical; min-height: 64px; }

    .requirements {
      font-size: 12px;
      color: #172554;
      background: rgba(255,255,255,0.55);
      border-radius: 8px;
      padding: 8px 10px;
      margin-top: 4px;
      line-height: 1.35;
    }

    .kba-section {
      margin-top: 8px;
      padding: 10px 12px;
      border-radius: 8px;
      background: rgba(255,255,255,0.45);
    }
    .kba-prompt {
      font-size: 14px;
      margin: 6px 0 8px;
      color: #0f172a;
      background: rgba(255,255,255,0.7);
      border-radius: 6px;
      padding: 8px 10px;
      border: 1px solid rgba(0,0,0,0.08);
    }

    .actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 16px;
    }

    .btn {
      cursor: pointer;
      border: none;
      padding: 10px 15px;
      font-size: 14px;
      border-radius: 8px;
      font-weight: 500;
    }
    .btn-primary { background-color: var(--one); color: var(--three); }
    .btn-plain   { background: transparent; color: var(--three); text-decoration: underline; }

    .msg { margin-top: 10px; font-size: 14px; min-height: 18px; }

    @media (max-width: 860px) {
      .container { width: calc(100% - 32px); padding: 24px 16px; }
      .form { width: 100%; }
    }
  </style>

  <script defer src="/js/reset-password.js"></script>
</head>
<body>
  <div class="container" data-token="{{token}}">
    <h1 class="title">Reset your password</h1>
    <p class="subtitle">Enter and confirm a new password for your account.</p>

    <div class="form">
      <label for="newPassword">New password</label>
      <input type="password" id="newPassword" placeholder="Enter new password" autocomplete="new-password" />

      <label for="confirmPassword">Confirm new password</label>
      <input type="password" id="confirmPassword" placeholder="Re-enter new password" autocomplete="new-password" />

      <div class="requirements">
        Must be at least 8 characters and include uppercase, lowercase, a number, and a symbol (@#$%^&+=).
      </div>

      <!-- Security check (shown only if the account has KBA) -->
      <div id="kbaSection" class="kba-section" style="display:none;">
        <label>Security question</label>
        <div id="kbaPrompt" class="kba-prompt"></div>
        <input type="hidden" id="kbaQuestionId" />
        <label for="kbaAnswer">Your answer</label>
        <textarea id="kbaAnswer" placeholder="Type your answer"></textarea>
      </div>

      <div class="actions">
        <a class="btn btn-plain" href="/">Cancel</a>
        <button id="submitReset" class="btn btn-primary" type="button">Reset Password</button>
      </div>

      <div id="msg" class="msg"></div>
    </div>
  </div>
</body>
</html>
