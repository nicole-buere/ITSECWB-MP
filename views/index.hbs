      id="emailOrUsername"
      placeholder="Email or Username"
      style="width:100%;padding:10px;box-sizing:border-box;"
    />
    <div style="margin-top:12px;display:flex;gap:10px;justify-content:flex-end;">
      <button type="button" id="forgotCancel">Cancel</button>
